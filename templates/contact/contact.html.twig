{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
{% block banner %}{% endblock %}

<section id="contact">
    <div class="contact_top">
        <h2>Contactez-nous</h2>
        <p>Avez-vous des suggestions? N'hésitez pas à nous contacter!</p>
    </div>

    <div class="formcontact">
        <form action="index.php">
            <label for="name">Nom :</label>
            <input type="text" name="name" id="name">
            <label for="email">Email :</label>
            <input type="email" id="email">
            <label for="subject">Choisissez un Sujet:</label>
            <select name="subject" id="subject" form="subjectform">
            <option value="inscription">Inscription</option>
            <option value="intendance">Intendance</option>
            <option value="problem">Problèmes sur le site</option>
            <option value="other">Autres...</option>
            </select>
            <label for="sujet">Sujet :</label>
            <input type="text" name="sujet" id="sujet">
            <label for="message">Message :</label>
            <textarea name="msg" id="msg" row="50" cols="30"></textarea>
            <input type="submit" name="push" id="submit">
        </form>
    </div>
</section>
{% endblock %}
